<Window x:Class="WpfApp1.AddStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Window1" Height="280" Width="550">
    <Grid>

        <Label Content="Pesel" HorizontalAlignment="Left" Margin="11,87,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="117,91,0,0" TextWrapping="Wrap" Text="99999999999" VerticalAlignment="Top" Width="127" Height="18" Name="peselBox"/>

        <Label Content="Imię" HorizontalAlignment="Left" Margin="11,7,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="117,11,0,0" TextWrapping="Wrap" Text="Jan" VerticalAlignment="Top" Width="127" Height="18" Name="nameBox"/>

        <Label Content="Drugie imię*" HorizontalAlignment="Left" Margin="11,127,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="117,131,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="127" Height="18" Name="secondNameBox"/>

        <Label Content="Nazwisko" HorizontalAlignment="Left" Margin="11,47,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="117,51,0,0" TextWrapping="Wrap" Text="Nowak" VerticalAlignment="Top" Width="127" Height="18" Name="surnameBox"/>

        <Label Content="Data urodzenia" HorizontalAlignment="Left" Margin="11,167,0,0" VerticalAlignment="Top"/>
        <DatePicker HorizontalAlignment="Left" Margin="117,171,0,0" VerticalAlignment="Top" Name="dobBox"/>

        <Label Content="Telefon*" HorizontalAlignment="Left" Margin="283,11,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="389,15,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="127" Height="18" Name="phoneBox"/>

        <Label Content="Adres" HorizontalAlignment="Left" Margin="283,51,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="389,55,0,0" TextWrapping="Wrap" Text="ul. Klonowa 1" VerticalAlignment="Top" Width="127" Height="18" Name="adressBox"/>

        <Label Content="Miejscowość" HorizontalAlignment="Left" Margin="283,91,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="389,95,0,0" TextWrapping="Wrap" Text="Kraków" VerticalAlignment="Top" Width="127" Height="18" Name="placeBox"/>

        <Label Content="Kod pocztowy" HorizontalAlignment="Left" Margin="283,131,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="389,135,0,0" TextWrapping="Wrap" Text="30-300" VerticalAlignment="Top" Width="127" Height="18" Name="postCodeBox"/>

        <Button Content="Dodaj" HorizontalAlignment="Left" Margin="422,217,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Button Content="Anuluj" HorizontalAlignment="Left" Margin="362,217,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
